extends layouts/app

block styles 
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenidoMain
    div()
        h1(class="text-center text-2xl font-extrabold") Ubicaci√≥n en el mapa

        div(class="flex flex-col md:flex-row items-center py-6 gap-4")
            h2(class="text-sm uppercase text-gray-800 font-bold") Filtrar propiedad:

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="categorys" class="text-sm w-24 uppercase text-gray-500 font-bold") Categorias
                select(id="categorys" class="flex-1 bg-white w-full px-2 py-1 border border-gray-200 rounded-md shadow")
                    option(value="") - Seleccione - 
                    each category in categorys
                        option(value=category.id)= category.name 
            
            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="prices" class="text-sm uppercase text-gray-500 font-bold") Rango de precios
                select(id="prices" class="flex-1 bg-white w-full px-2 py-1 border border-gray-200 rounded-md shadow")
                    option(value="") - Seleccione - 
                    each price in prices
                        option(value=price.id)= price.name 

        div(id="home-map" class="h-[400px] mt-2 mb-2")

        section(class="py-2")
            h2(class="text-center text-2xl font-bold pt-2") Casas en venta 

            div(class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-2")
                each propiedad in homes 
                    include ./templates/homeCard

        section(class="py-2")
            h2(class="text-center text-2xl font-bold pt-2") Departamentos en venta

            div(class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-2")
                each propiedad in dptos
                    include ./templates/homeCard
                    //- pre= JSON.stringify(homes, undefined, 2)

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/homeMap.js")